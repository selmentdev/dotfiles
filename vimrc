filetype plugin on
filetype indent on

set autoread
set wildmenu
set ruler
set cmdheight=2
colorscheme murphy

set ignorecase
set smartcase
set hlsearch
set incsearch
set lazyredraw
set magic
set showmatch
set novisualbell
set background=dark
set encoding=utf8
set nobackup
set nowb
set noswapfile
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set lbr
set tw=500
set ai " auto increment
set si " smart indent

" Always show the status line
set laststatus=2

:set listchars=eol:¬,tab:>·,trail:~,extends:>,precedes:<,space:␣
:set list
